      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGebruiker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageVoertuigen">

    <Grid Background="White">

        <!-- btn toevoegen declareren -->

        <Button x:Name="btnToevoegen" Content="☛ Toevoegen" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="155" Margin="35,39,0,0" Click="btnToevoegen_Click"></Button>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="40,100,0,0" Grid.Row="2">

            <!-- Scrollviewer maken -->

            <WrapPanel  x:Name="WrapPanelVoertuigen" ></WrapPanel>

        </ScrollViewer>
    </Grid>
