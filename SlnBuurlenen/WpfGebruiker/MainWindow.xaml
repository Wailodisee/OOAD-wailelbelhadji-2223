<Window x:Class="WpfGebruiker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGebruiker"
        mc:Ignorable="d"
        Title="WPF Burrlenen" Height="470" Width="860">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="15,60,670,0">
            <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10" MinWidth="110" FontSize="16" FontWeight="Bold" Click="btnHome_Click"></Button>
            <Button x:Name="btnOntleningen" Content="Ontleningen" HorizontalAlignment="Left" MinWidth="110" FontSize="16" FontWeight="Bold" Click="btnOntleningen_Click"></Button>
            <Button x:Name="btnVoertuigen" Content="Voertuigen" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10" MinWidth="110" FontSize="16" FontWeight="Bold" Click="btnVoertuigen_Click"></Button>
        </StackPanel>

        <Frame x:Name="Main" Margin="130,30,0,0" NavigationUIVisibility="Hidden"></Frame>
        <Image x:Name="imgNaam" HorizontalAlignment="Left" Height="100" Margin="15,315,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
